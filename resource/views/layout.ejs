<!doctype html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Real time pizza app</title>
    <link rel="icon" type="image/png" href="/favicon.png">

    <link
        href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&family=Nunito&family=Open+Sans:wght@500&family=Roboto:wght@300&display=swap"
        rel="stylesheet">

    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Add these lines in the head section of your EJS file -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

    <link rel="stylesheet" href="/css/app.css">
    <script src="/js/app.js"></script>
</head>
<script>

    window.onload = function () {
        loginCheck();
    };
    async function loginCheck() {
        const loginLink = document.getElementById('loginLink');

        const d = await fetch("/check-login");
        const data = await d.json();

        if (data.success) {
            loginLink.innerText = 'Logout';
            loginLink.setAttribute('href', '/logout');
        } else {
            loginLink.innerText = 'Login';
            loginLink.setAttribute('href', '/login');
        }
    }
</script>

<body>
    <nav class="container mx-auto flex justify-between items-center py-4">
        <div>
            <img src="img/logo.png" alt="logo">
        </div>
        <div>
            <ul class="flex items-center">
                <li class="mx-2"><a href="/">Home</a></li>
                <li class="mx-2"><a href="#">Offers</a></li>
                <li class="mx-2"><a href="/register">Register</a></li>

                <li class="mx-2"><a id="loginLink" href="/login">Login</a></li>


                <li class="mx-2"><a href="/cart" class="inline-block px-4 py-2 rounded-full"><img src="/img/cart.png"
                            alt=""></a></li>
            </ul>
        </div>
    </nav>

    <%- body %>


</body>



</html>