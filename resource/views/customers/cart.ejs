<section class="cart py-16">

    <div class="order container mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-500 pb-4">
            <img src="/img/cart-black.png" alt="">
            <h1 class="font-bold text-2xl ml-4 ">Order summary</h1>
        </div>

        <%locals.cart.forEach((item, index)=>{%>
            <div class="pizza-list">
                <div class="flex items-center my-8">
                    <img class="w-24" src="/img/pizza.png" alt="">
                    <div class="flex-1 ml-4 ">
                        <h1>
                            <%=item.pizza.name%>
                        </h1>
                        <span>
                            <%=item.pizza.size%>
                        </span>
                    </div>
                    <span class="flex-1">
                        <%=item.quantity%>
                    </span>

                    <span class=" font-bold text-lg">
                        ‚Çπ<%=item.pizza.price%>
                    </span>
                </div>
            </div>
            <% }) %>
                <hr class="border-b border-gray-400">
                <div class="text-right  py-4">
                    <div>
                        <span class="text-lg font-bold">
                            Total Amount:
                        </span>
                        <span class="amout text-2xl font-bold ml-2">
                            ‚Çπ<%=total%>
                        </span>

                    </div>
                    <div>
                        <form class="mt-12">
                            <input type="text" class="border border-gray-400 p-2 w-1/2 mb-4" placeholder="Phone Number">
                            <input type="text" class="border border-gray-400 p-2 w-1/2" placeholder="Address">
                            <div class="my-4">

                                <button class="px-6 py-2 rounded-full text-white font-bold  bg-orange-600 btn-primary"
                                    type="submit">Order
                                    Now</button>
                            </div>
                        </form>
                    </div>
                    <a href=""
                        class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold">Login
                        to
                        continue </a>
                </div>

    </div>
